public class Tree {

    public Node root;

    public Tree(Node root){
        this.root = root;
    }

    public Tree combineWith(Tree o){
        if (o == null) return this;
        else if (o.root == null) return this;
        return new Tree(combineNode(o.root, this.root));

    }

    private Node combineNode (Node n1, Node n2){
        if (n1 == null && n2 == null) return null;
        else if (n1 == null) return n2;
        else if (n2 == null) return n1;
        else {
            return new Node (n1.val+n2.val, combineNode(n1.left, n2.left),
                    combineNode(n1.right, n2.right));
        }

    }

}
